{% extends "base.html.twig" %}
{% block body %}
    <h1>Results</h1>
    <table class="table is-fullwidth">
        <thead>
        <tr>
            <th>File</th>
            <th>Path</th>
            <th>preview</th>
        </tr>
        </thead>
        <tbody>

        {% for result in results %}

            <tr>
                <td>
                    <a href="{{ path('knowledge_read',{path: result.path}) }}"
                       class="list-group-item">{{ result.name }}</a>
                </td>
                <td>
                    {{ result.path }}
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}