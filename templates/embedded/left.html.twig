{% macro menuItem(nav,par,dept,path) %}
    {% import _self as macros %}

    <a {% if nav.path==path %}class="is-active"{% endif %}

            {% if nav.isFolder and nav.path~"/" ==path %}class="is-active"{% endif %}
            {% if nav.hasReadme and nav.path~"/readme.md" ==path %}class="is-active"{% endif %}

       href="{{ path("knowledge_read",{"path":nav.path}) }}{% if nav.isFolder %}/{% endif %}">
        {% if nav.hasReadme %}
            <span class="icon  has-text-link">
            <i class="fas fa-folder"></i>
</span>
        {% elseif nav.isFolder %}
            <span class="icon has-text-primary">
            <i class="fad fa-folder"></i>
                </span>
        {% else %}
            <span class="icon has-text-info">

                {% if nav.type=="image" %}
                    <i class="fas fa-image"></i>
                {% elseif nav.type=="video" %}
                    <i class="fas fa-video"></i>
                {% else %}
                    <i class="fas fa-file"></i>

                {% endif %}
            </span>
        {% endif %}

        {{ nav.name }}
    </a>
    {% if nav.isFolder %}
        <ul>
            {% for sublink in nav.subLinks %}
                {% set at=par ~ loop.index0 %}
                <li>
                    {{ macros.menuItem(sublink,at,dept+1,path) }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}
{% import _self as macros %}

<aside class="menu">
    <ul class="menu-list">
        <li>
            <a {% if path =="readme" %} class="is-active"{% endif %}

                    href="{{ path('knowledge_read_home') }}">
                <i class="fad fa-home"></i> Home
            </a>
        </li>
        {% for item in nav.subLinks %}
            {% set dept=0 %}
            {% set at=loop.index0 %}
            <li>
                {{ macros.menuItem(item,at,dept,path) }}
            </li>
        {% endfor %}
    </ul>
</aside>